<table class="table table-striped table-bordered float-left mt-3">
    <thead>
        <tr>
            <th>{{ 'firm.list.name'|trans }}</th>
            <th>{{ 'firm.list.legal-form'|trans }}</th>
            <th>{{ 'firm.list.siren'|trans }}</th>
            <th>{{ 'firm.list.registerCity'|trans }}</th>
            <th>{{ 'firm.list.dateRegister'|trans }}</th>
            <th>{{ 'firm.list.capital'|trans }}</th>
            <th>{{ 'firm.list.dateCreated'|trans }}</th>
            <th>{{ 'firm.list.dateModified'|trans }}</th>
            <th>{{ 'firm.list.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for firm in firms %}
            <tr>
                {% include 'components/molecules/firm/item.html.twig' with {'firm': firm} %}
            </tr>
        {% else %}
            <tr>
                <td colspan="10">{{ 'no-result'|trans }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
